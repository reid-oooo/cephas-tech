{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "server.js": {
      "runtime": "nodejs@18.x"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/client/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/images/cephas.png"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
